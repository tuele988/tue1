
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

</head>
<body>
    @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
    {
    <div class="container">
        <div class="justify-content-center h-50" >
            <div class="card" style="margin:0 auto; background-color:none !important">
                <div class="card-header">
                    <h3 style="text-align:center">Đăng Nhập</h3>
                    
                </div>
                <div class="card-body">
                    <form>
                        <div class="input-group form-group">
                            <P style="color:white">Tài khoản</P>
                            <input type="text" class="form-control" placeholder="username" name="username">

                        </div>
                        <div class="input-group form-group">
                            <P style="color:white">Mật Khẩu</P>
                            <input type="password" name="password" class="form-control" placeholder="password">
                        </div>
                        
                        <div class="form-group m-t-10">
                            <input type="submit" value="Đăng Nhập" class="btn float-right login_btn">
                        </div>
                    </form>
                </div>
                <div class="card-footer">
                    
                    <div class="d-flex justify-content-center">
                      @Html.Raw(ViewBag.Error)
                    </div>
                </div>
            </div>
        </div>
    </div>
    }
</body>
</html>

@model IEnumerable<shopaoquan.producttoppic>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_AdminLayput.cshtml";
}
<div class="card ">
    <div class="card-header">
        <div class="row">
            <div class="col-6 text-danger">Quản lý bài viết</div>
            <div class="col-6 text-right">
                <a href="@Url.Action("Create","Post")" class="btn btn-sn btn-success"><i class="fas fa-plus"></i></a>
                <a href="@Url.Action("Trash","Post")" class="btn btn-sn btn-danger"><i class="fas fa-trash"></i></a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>hinh anh</th>
                    <th scope="col">Tên Bài Viết</th>
                    <th scope="col">Slug</th>
                    <th scope="col">Chức Năng</th>
                    <th scope="col">Id</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var row in Model)
                {
                    <tr>
                        <th><img src="~/public/img/Post/@row.PostImg" class="img-40" /></th>
                        <th style="width:300px">@row.Posttitle</th>
                        <td style="width:300px">@row.toppictitle</td>
                        <td>
                            @if (row.PostStatus == 1)
                            {
                                <a href="@Url.Action("Status","Post",new {id=row.PostId })" class="btn btn-sn btn-success"><i class="fas fa-toggle-on"></i></a>
                            }
                            else
                            {
                                <a href="@Url.Action("Status","Post",new {id=row.PostId })" class="btn btn-sn btn-danger"><i class="fas fa-toggle-off"></i></a>
                            }

                            <a href="@Url.Action("Edit","Post",new {id=row.PostId })" class="btn btn-sn btn-danger"><i class="fas fa-edit"></i></a>
                            <a href="@Url.Action("Deltrash","Post",new {id=row.PostId })" class="btn btn-sn btn-success"><i class="fas fa-trash"></i></a>

                        </td>
                        <td>@row.PostId</td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
    </div>












@model IEnumerable<shopaoquan.productcategory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_AdminLayput.cshtml";
}
<div class="card ">
    <div class="card-header">
        <div class="row">
            <div class="col-6 text-danger">Quản lý sản phẩm</div>
            <div class="col-6 text-right">
                <a href="@Url.Action("Create","Product")" class="btn btn-sn btn-success"><i class="fas fa-plus"></i></a>
                <a href="@Url.Action("Trash","Product")" class="btn btn-sn btn-danger"><i class="fas fa-trash"></i></a>
            </div>
        </div>
    </div>
    <div class="card-body">
        @Html.Partial("_Message")
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr class="bg-success">
                    <th scope="col">Hình</th>
                    <th scope="col">Tên sản phẩm</th>
                    <th scope="col">Loại Sản Phẩm</th>
                    <th scope="col">Chức năng</th>
                    <th scope="col">Id</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var row in Model)
                {
                <tr>
                    <th><img src="~/public/img/Product/@row.ProductImg" class="img-40"/></th>
                    <th>@row.ProductName</th>
                    <th>@row.CategoryName</th>
                    <td>
                        @if (row.ProductStatus == 1)
                        {
                            <a href="@Url.Action("Status","Product",new {id=row.ProductId })" class="btn btn-sn btn-success"><i class="fas fa-toggle-on"></i></a>
                        }
                        else
                        {
                            <a href="@Url.Action("Status","Product",new {id=row.ProductId })" class="btn btn-sn btn-danger"><i class="fas fa-toggle-off"></i></a>
                        }

                        <a href="@Url.Action("Edit","Product",new {id=row.ProductId })" class="btn btn-sn btn-danger"><i class="fas fa-edit"></i></a>
                        <a href="@Url.Action("Deltrash","Product",new {id=row.ProductId })" class="btn btn-sn btn-success"><i class="fas fa-trash"></i></a>

                    </td>
                    <td>@row.ProductId</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@model IEnumerable<shopaoquan.Models.ModelPost>
@{
    Layout = null;
        }
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="section-title">
                <span>Tin Tức Mới Nhất</span>
                <h2>Tin công nghệ</h2>
            </div>
        </div>
    </div>
    <div class="row">
        @foreach (var row_p in Model)
        {
        <div class="col-lg-4 col-md-6 col-sm-6">
            <div class="blog__item">
                <div class="blog__item__pic set-bg" data-setbg="/public/img/post/@row_p.Img"></div>
                <div class="blog__item__text">
                    <span><img src="~/templeate/img/icon/calendar.png" alt=""> @row_p.Created_at</span>
                    <h5>@row_p.Title</h5>
                    <a href="~/@row_p.Slug">Đọc Tiếp</a>
                </div>
            </div>
        </div>
        }
    </div>
</div>
